<div class="container">
  <div class="row mt-4">
    <div class="col-md-4">
      <img class="img" src="{{user.image}}" style="width: 100%;">    
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{ user.name }}</h5>
        <p class="card-text">{{ user.email}}</p>
        <a href='/users/{{user.id}}/edit'>
          <button type="button" class="btn btn-primary">Edit</button>
        </a>
      </div>
    </div>
  </div>
</div>